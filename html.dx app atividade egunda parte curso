/* Reset básico */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Corpo */
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    color: #333;
    text-align: center;
}

/* Cabeçalho */
header {
    background-color: #007bff;
    color: white;
    padding: 20px;
}

/* Navegação */
nav ul {
    list-style: none;
    padding: 10px;
}

nav ul li {
    display: inline;
    margin: 0 15px;
}

nav a {
    text-decoration: none;
    color: #007bff;
    font-weight: bold;
}

/* Seções */
section {
    margin: 30px;
    padding: 20px;
    background: white;
    border-radius: 10px;
}

/* Rodapé */
footer {
    background-color: #222;
    color: white;
    padding: 15px;
}
